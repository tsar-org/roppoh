{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx}", "package.json", "tsconfig.json"],
      "outputs": ["dist/**", "build/**"]
    },
    "cf-typegen": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx}",
        "wrangler.jsonc",
        "package.json",
        ".dev.vars",
        ".env"
      ],
      "outputs": ["worker-configuration.d.ts"]
    },
    "check:type": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx}", "package.json", "tsconfig.json"],
      "outputs": []
    },
    "test": {
      "cache": false
    }
  }
}
