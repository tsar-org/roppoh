{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "check:knip": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx}", "package.json", ".knip.jsonc"],
      "outputs": []
    },
    "check:type": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx}", "package.json", "tsconfig.json"],
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "cf-typegen": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx}", "wrangler.jsonc", "package.json", ".dev.vars"],
      "outputs": ["worker-configuration.d.ts"],
      "dependsOn": ["^build"]
    },
    "build": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx}", "package.json", "tsconfig.json"],
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["^build"]
    }
  }
}
